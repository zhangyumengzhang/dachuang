<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context=".daohang.MapFragment">

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:background="@color/white"

            android:orientation="horizontal">



            <ImageView

                android:id="@+id/images_head"

                android:layout_width="80dp"

                android:layout_height="80dp"

                android:layout_marginLeft="10dp"

                android:layout_marginTop="10dp"

                android:layout_marginRight="10dp"

                android:layout_marginBottom="10dp"

                android:contentDescription="tupianmiaosu"

                android:scaleType="fitCenter"

                />



            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:orientation="vertical"

                >



                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:layout_marginTop="20dp"

                    android:layout_weight="0.3"

                    android:orientation="horizontal">



                    <TextView

                        android:id="@+id/textView8"

                        android:layout_width="70dp"

                        android:layout_height="wrap_content"

                        android:text="昵称："

                        android:textSize="18sp"/>



                    <TextView

                        android:id="@+id/t_name"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:text="@string/app_name"

                        android:textSize="18sp"

                        android:textStyle="bold"/>

                </LinearLayout>



                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_weight="0.3"

                    android:orientation="horizontal">



                    <TextView

                        android:id="@+id/textView9"

                        android:layout_width="70dp"

                        android:layout_height="wrap_content"

                        android:text="学号："

                        android:textSize="18sp"/>



                    <TextView

                        android:id="@+id/t_number"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:text="我"

                        android:textSize="18sp"

                        android:textStyle="bold"/>

                </LinearLayout>



            </LinearLayout>



        </LinearLayout>



        <LinearLayout

            style="@style/wrap_layout"

            >

            <!-- 上圆角-->



            <LinearLayout

                android:id="@+id/preson_data"

                style="@style/top_layout">



                <ImageView

                    android:id="@+id/imageView2"

                    android:layout_width="40dp"

                    android:layout_height="match_parent"

                    android:src="@drawable/tab_contact_selector"/>



                <TextView

                    style="@style/usertext"

                    android:text="个人资料"/>



                <ImageView style="@style/img_arrow"

                    android:contentDescription="图片描述"/>

            </LinearLayout>



            <!-- 分割线 -->

            <View

                style="@style/bg_line"

                android:layout_height="1dp"/>

            <!-- 无圆角-->

            <LinearLayout style="@style/mid_layout">



                <ImageView

                    android:id="@+id/imageView6"

                    android:layout_width="40dp"

                    android:layout_height="match_parent"

                    android:src="@android:drawable/ic_menu_upload_you_tube"

                    />



                <TextView

                    style="@style/usertext"

                    android:text="我的申请"/>



                <ImageView style="@style/img_arrow"

                    android:contentDescription="图片描述"/>

            </LinearLayout>



            <!-- 分割线 -->

            <View

                style="@style/bg_line"

                android:layout_height="1dp"/>     <!-- 分割线 -->



            <!-- 无圆角-->



            <LinearLayout

                android:id="@+id/notification"

                style="@style/mid_layout"

                android:layout_width="match_parent"

                android:layout_height="match_parent">



                <ImageView

                    android:id="@+id/imageView7"

                    android:layout_width="40dp"

                    android:layout_height="match_parent"

                    android:src="@android:drawable/ic_dialog_email" />



                <TextView

                    style="@style/usertext"

                    android:text="消息通知" />



                <ImageView

                    style="@style/img_arrow"

                    android:contentDescription="图片描述" />

            </LinearLayout>



            <View

                style="@style/bg_line"

                android:layout_width="match_parent"

                android:layout_height="1dp"/>



            <LinearLayout

                android:id="@+id/feedback"

                style="@style/mid_layout"

                android:layout_width="match_parent"

                android:layout_height="match_parent">



                <ImageView

                    android:id="@+id/imageView8"

                    android:layout_width="40dp"

                    android:layout_height="match_parent"

                    android:src="@android:drawable/ic_dialog_info" />



                <TextView

                    style="@style/usertext"

                    android:text="问题与反馈" />



                <ImageView

                    style="@style/img_arrow"

                    android:contentDescription="图片描述" />



            </LinearLayout>



            <View

                android:id="@+id/view9"

                style="@style/bg_line"

                android:layout_width="match_parent"

                android:layout_height="1dp"/>



            <LinearLayout

                android:id="@+id/me_share"

                style="@style/mid_layout">



                <ImageView

                    android:id="@+id/imageView9"

                    android:layout_width="40dp"

                    android:layout_height="match_parent"

                    android:src="@android:drawable/ic_menu_share" />



                <TextView

                    style="@style/usertext"

                    android:text="分享应用" />



                <ImageView

                    style="@style/img_arrow"

                    android:contentDescription="图片描述" />

            </LinearLayout>

            <!-- 分割线 -->

            <!-- 无圆角-->



            <View

                style="@style/bg_line"

                android:layout_height="1dp"/>

            <!-- 下圆角-->

            <LinearLayout

                android:id="@+id/about"

                style="@style/bottom_layout">



                <ImageView

                    android:id="@+id/imageView10"

                    android:layout_width="40dp"

                    android:layout_height="match_parent"

                    android:src="@android:drawable/ic_menu_my_calendar" />



                <TextView

                    style="@style/usertext"

                    android:text="关于我们" />



                <ImageView

                    style="@style/img_arrow"

                    android:contentDescription="图片描述" />

            </LinearLayout>



        </LinearLayout>





        <!-- 全圆角-->

        <LinearLayout style="@style/wrap_layout">



            <LinearLayout style="@style/single_layout">



                <ImageView

                    android:id="@+id/imageView11"

                    android:layout_width="40dp"

                    android:layout_height="match_parent"

                    android:src="@android:drawable/ic_menu_manage"

                    />



                <TextView

                    style="@style/usertext"

                    android:text="设置"/>



                <ImageView style="@style/img_arrow"

                    android:contentDescription="图片描述"/>

            </LinearLayout>



        </LinearLayout>



        <Button

            android:id="@+id/btn_quit"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"

            android:layout_marginTop="10dp"

            android:layout_marginRight="15dp"

            android:background="?attr/colorPrimary"

            android:text="退出"

            android:textColor="@color/white"

            android:textSize="18sp"/>



    </LinearLayout>

</ScrollView>
